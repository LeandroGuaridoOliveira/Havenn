generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// =========================================================================
// ENUMS
// =========================================================================

enum Role {
  ADMIN
  CUSTOMER
}

enum OrderStatus {
  PENDING
  PAID
  FAILED
}

enum AuditAction {
  LOGIN_SUCCESS
  LOGIN_FAILED
  LOGOUT
  ADMIN_ACCESS
  PRODUCT_CREATED
  TOKEN_EXPIRED
  UNAUTHORIZED_ACCESS
}

// =========================================================================
// MODELS
// =========================================================================

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  role          Role     @default(CUSTOMER)
  
  // RELAÇÃO INVERSA: Um usuário pode ter muitos pedidos (necessário para o Dashboard)
  orders        Order[] 
  
  // RELAÇÃO INVERSA: Registro de auditoria do usuário
  auditLogs     AuditLog[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("users")
}

model Order {
  id            String      @id @default(uuid())
  
  // LIGAÇÃO AO CLIENTE (CHAVE ESTRANGEIRA) - NOVO
  userId        String?     
  user          User?       @relation(fields: [userId], references: [id]) 
  
  // Dados de entrega (para pedidos anônimos/consulta)
  customerEmail String?     
  
  status        OrderStatus @default(PENDING)
  totalAmount   Decimal     @db.Decimal(10, 2)
  gatewayId     String?
  licenseKey    String?     @unique // Chave anti-pirataria
  
  items         OrderItem[] 
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("orders")
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  price     Decimal @db.Decimal(10, 2)

  @@map("order_items")
}

model Product {
  id            String   @id @default(uuid())
  name          String
  description   String?  @db.Text
  details       String?  @db.Text
  category      String   @default("Software")
  videoUrl      String?
  price         Decimal  @db.Decimal(10, 2)
  imageUrl      String?  // URL da imagem do produto
  storageKey    String
  isActive      Boolean  @default(true)
  
  orderItems    OrderItem[] 

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("products")
}

model AuditLog {
  id          String      @id @default(uuid())
  
  // User who performed the action (nullable for failed logins)
  userId      String?
  user        User?       @relation(fields: [userId], references: [id])
  
  // Action type
  action      AuditAction
  
  // Additional context
  email       String?     // Email attempted (useful for failed logins)
  ipAddress   String?     // IP address of request
  userAgent   String?     // Browser/client information
  details     String?     @db.Text // Additional JSON or text details
  
  createdAt   DateTime    @default(now())

  @@map("audit_logs")
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}