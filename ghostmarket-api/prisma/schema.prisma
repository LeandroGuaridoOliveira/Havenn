generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// =========================================================================
// ENUMS
// =========================================================================

enum Role {
  ADMIN
  CUSTOMER
}

enum OrderStatus {
  PENDING
  PAID
  FAILED
}

// =========================================================================
// MODELS
// =========================================================================

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  role          Role     @default(CUSTOMER)
  
  // RELAÇÃO INVERSA: Um usuário pode ter muitos pedidos (necessário para o Dashboard)
  orders        Order[] 
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("users")
}

model Order {
  id            String      @id @default(uuid())
  
  // LIGAÇÃO AO CLIENTE (CHAVE ESTRANGEIRA) - NOVO
  userId        String?     
  user          User?       @relation(fields: [userId], references: [id]) 
  
  // Dados de entrega (para pedidos anônimos/consulta)
  customerEmail String?     
  
  status        OrderStatus @default(PENDING)
  totalAmount   Decimal     @db.Decimal(10, 2)
  gatewayId     String?
  licenseKey    String?     @unique // Chave anti-pirataria
  
  items         OrderItem[] 
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("orders")
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  price     Decimal @db.Decimal(10, 2)

  @@map("order_items")
}

model Product {
  id            String   @id @default(uuid())
  name          String
  description   String?  @db.Text
  details       String?  @db.Text
  category      String   @default("Software")
  videoUrl      String?
  price         Decimal  @db.Decimal(10, 2)
  storageKey    String
  isActive      Boolean  @default(true)
  
  orderItems    OrderItem[] 

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("products")
}